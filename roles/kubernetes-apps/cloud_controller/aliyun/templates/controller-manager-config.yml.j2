kind: Config
contexts:
  - context:
      cluster: kubernetes
      user: system:aliyun-cloud-controller-manager
    name: system:aliyun-cloud-controller-manager@kubernetes
current-context: system:aliyun-cloud-controller-manager@kubernetes
users:
  - name: system:aliyun-cloud-controller-manager
    user:
      tokenFile: /var/run/secrets/kubernetes.io/serviceaccount/token
apiVersion: v1
clusters:
  - cluster:
      certificate-authority-data: {{ aliyun_cluster_ca['content'] }}
      server: https://{{ ip | default(ansible_default_ipv4.address) }}:6443
    name: kubernetes
